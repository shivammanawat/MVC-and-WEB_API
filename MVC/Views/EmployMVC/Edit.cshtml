@model MVC.Models.EmployeeInfo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        @using (Html.BeginForm())
        {

        <form>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.EmpNo)

