@model IEnumerable<MVC.Models.EmployeeInfo>

@{
    ViewBag.Title = "GetAllEmployee";
}

<h2>GetAllEmployee</h2>

<p><a href="@Url.Action("create","EmployMVC")" class="btn btn-info btn-md">Create</a></p>

<table class="table table-striped">
    <thead class="tab-content">
        <tr>
            <th>Emp Name</th>

            <th>Dept Name</th>

            <th>Designation</th>

            <th>Salary</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {

        <tr>
            <td>@Html.DisplayFor(model => i.EmpName)</td>

            <td>@Html.DisplayFor(model => i.DeptName)</td>

            <td>@Html.DisplayFor(model => i.Designation)</td>

            <td>@Html.DisplayFor(model => i.Salary)</td>

            <td>
            @Html.ActionLink("Edit", "Edit", new { id = i.EmpNo },null) |
            @Html.ActionLink("Delete", "delete", new { id = i.EmpNo },null)
                </td>
        </tr>

        }
    </tbody>
</table>